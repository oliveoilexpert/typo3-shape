<T3DataStructure>
    <sheets>
        <general>
            <ROOT>
                <sheetTitle>General</sheetTitle>
                <type>array</type>
                <el>
                    <settings.form>

                        <label>Form</label>
                        <config>
                            <type>group</type>
                            <allowed>tx_shape_form</allowed>
                            <size>1</size>
                            <minitems>1</minitems>
                            <maxitems>1</maxitems>
                        </config>

                    </settings.form>
                    <settings.lazyLoad>
                        <label>Lazy load uncached form</label>
                        <onChange>reload</onChange>
                        <description>Prefills or display conditions based on dynamic data like frontend users require an uncached form. When enabled, this plugin will render a placeholder that replaces itself with an uncached form fetched from the server.</description>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.lazyLoad>
                    <settings.lazyLoadFragmentPage>
                        <label>Lazy load fragment page</label>
                        <displayCond>FIELD:settings.lazyLoad:=:1</displayCond>
                        <description>This must be set for lazy load to work. Page should not contain a Shape form plugin.</description>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                        </config>
                    </settings.lazyLoadFragmentPage>
                    <settings.uploadFolder>

                        <label>Upload folder</label>
                        <config>
                            <type>folder</type>
                            <size>1</size>
                            <minitems>1</minitems>
                            <maxitems>1</maxitems>
                        </config>

                    </settings.uploadFolder>
                </el>
            </ROOT>
        </general>
        <finishers>
            <ROOT>
                <sheetTitle>Finishers</sheetTitle>
                <type>array</type>
                <el>
                    <settings.finishers>

                        <label>Finishers</label>
                        <config>
                            <type>inline</type>
                            <foreign_table>tx_shape_finisher</foreign_table>
                            <foreign_field>content_parent</foreign_field>
                            <foreign_sortby>sorting</foreign_sortby>
                            <appearance>
                                <useSortable>1</useSortable>
                                <expandSingle>1</expandSingle>
                            </appearance>
                        </config>

                    </settings.finishers>
                </el>
            </ROOT>
        </finishers>
    </sheets>
</T3DataStructure>