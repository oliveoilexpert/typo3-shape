<T3DataStructure>
    <sheets>
        <general>
            <ROOT>
                <sheetTitle>General</sheetTitle>
                <type>array</type>
                <el>
                    <table>
                        <label>Table name</label>
                        <config>
                            <type>input</type>
                            <required>1</required>
                        </config>
                    </table>
                    <storagePage>
                        <label>Storage page</label>
                        <config>
                            <type>group</type>
                            <internal_type>db</internal_type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                        </config>
                    </storagePage>
                    <mapping>
                        <label>Table-Form-Mapping</label>
                        <description>JSON mapping table columns to form fields ("columName": "fieldName")</description>
                        <config>
                            <type>json</type>
                        </config>
                    </mapping>
                </el>
            </ROOT>
        </general>
    </sheets>
</T3DataStructure>